{
  "name": "WebDiet",
  "version": "1.0",
  "description": "Control the time spent on websites",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation"
  ]
}
